<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZCS Asset Management</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="float: left; padding: 10px; width:100%">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-12">
                    <img height="70px" width="150px" src="~/Content/ic_app.png">
                </div>
                <div class="col-lg-8 col-md-8 col-sm-12">
                    <label class="header">ZCS Asset Management</label>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-12">
                    @Html.ActionLink("Logout", "Logout","Home" , new { @class = "logout" })
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
    </div>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper" class="sidebar">
            <div class="menu">
                <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: calc(100vh - 65px);">
                    <ul class="list" style="overflow: hidden; width: auto; height: calc(100vh - 65px); list-style: none;">
                        <li>
                            <div class="user-info">
                                <div class="image"><a class=" waves-effect waves-block" href="profile.html"><img alt="User" height="100px" width="100px" src="~/Content/profile_pic.jpg"></a></div>
                                <div class="detail">
                                    <h4>Michael</h4>
                                </div>
                            </div>
                        </li>
                        <li style="margin-bottom: -10px;"><a class="waves-effect waves-block" href="#"><i class="fa fa-home sidebar-icon"></i><span>Dashboard</span></a> </li>
                        <li style="margin-bottom: -10px;"><a class="waves-effect waves-block" href="#"><i class="fa fa-file-o sidebar-icon"></i>Reports</a> </li>
                    </ul>
                </div>
            </div>
            <footer style="text-align:center">
                <p>&copy; @DateTime.Now.Year - ZCS Asset Management</p>
            </footer>
        </div>
        <div class="container body-content">
            @RenderBody()            
        </div>
    </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
